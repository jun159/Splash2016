<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="0dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/list_friend_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/friend_light_blue"
            android:scaleType="centerCrop"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="3.5"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/list_friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend 1"
                android:paddingStart="5dp"
                android:textColor="#4b4b4b"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/list_friend_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#8b8b8b"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Enter description"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/list_friend_lastChatTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="top|end"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="20dp"
        android:background="#eae9e9" />

</android.support.v7.widget.CardView>